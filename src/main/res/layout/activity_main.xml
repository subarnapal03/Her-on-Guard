<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Share Location Button -->
    <Button
        android:id="@+id/shareLocationButton"
        android:layout_width="336dp"
        android:layout_height="142dp"
        android:layout_centerInParent="true"
        android:onClick="shareLocation"
        android:text="Send SOS" />

    <!-- Chatbot Button -->
    <Button
        android:id="@+id/chatbotButton"
        android:layout_width="242dp"
        android:layout_height="90dp"
        android:layout_below="@id/shareLocationButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:onClick="openChatbot"
        android:text="Chat with Chatbot" />


</RelativeLayout>
